<div class="page-header">
  <h1><%= @movie.title %>&nbsp;<small><%= @movie.year %></small></h1>
</div>

<span class="spacer"><%= link_to "Edit", edit_movie_path(@movie), :class=>"btn btn-success btn-sm" %></span>
<span class="spacer"><%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: "Are you sure?" }, :class=>"btn btn-danger btn-sm" %></span>

<h3>Actors in this movie:</h3>
<ul>
  <% @movie_actors.each do |actor| %>
    <li><%= actor.name %></li>
  <% end %>
</ul>